<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="290.0" prefWidth="250.0" spacing="10" style="-fx-background-color: #b8b8b8" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <fx:define>
        <Font fx:id="FONT" size="18" />
    </fx:define>

    <StackPane alignment="CENTER">
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#e8e8e8" height="50.0" stroke="BLACK" width="230.0" />
        <Text fx:id="output" textAlignment="RIGHT" font="$FONT" />
    </StackPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="50" text="7" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="8" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="9" font="$FONT" />
        <Button onAction="#processOperator" prefWidth="50" text="/" font="$FONT" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="50" text="4" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="5" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="6" font="$FONT" />
        <Button onAction="#processOperator" prefWidth="50" text="*" font="$FONT" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="50" text="1" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="2" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="3" font="$FONT" />
        <Button onAction="#processOperator" prefWidth="50" text="-" font="$FONT" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="50" text="0" font="$FONT" />
        <Button onAction="#processNumpad" prefWidth="50" text="." font="$FONT" />
        <Button onAction="#processOperator" prefWidth="50" text="=" font="$FONT" />
        <Button onAction="#processOperator" prefWidth="50" text="+" font="$FONT" />
    </HBox>

</VBox>
